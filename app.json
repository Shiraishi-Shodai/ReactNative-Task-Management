{
  "expo": {
    "name": "task-management-app",
    "slug": "taskman",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/adaptive-icon.png",
    "scheme": "task-management-app",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "android": {
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.school.androidapp"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "@react-native-firebase/app",
      "react-native-background-fetch",
      "expo-router",
      [
        "expo-font",
        {
          "Noto-Sans-JP": {
            "Noto-Sans-JP": "./assets/fonts/NotoSansJP-Regular.ttf"
          },
          "SpaceMono": {
            "SpaceMono": "./assets/fonts/SpaceMono-Regular.ttf"
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#ffffff",
          "defaultChannel": "default",
          "sounds": [
            "./assets/audio/task_remind.mp3",
            "./assets/audio/task_not_set.mp3"
          ],
          "enableBackgroundRemoteNotifications": false
        }
      ],
      "react-native-background-fetch"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "assetBundlePatterns": ["**/*"],
    "extra": {
      "eas": {
        "projectId": "5763f89d-5fe6-47f9-923d-b48dbab91741"
      }
    },
    "owner": "shota2"
  }
}
